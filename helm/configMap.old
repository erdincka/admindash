---
apiVersion: v1
kind: ConfigMap
metadata:
  name: app-files
  labels:
    {{- include "admindash.labels" . | nindent 4 }}
data:
  appsh: |-
{{ .Files.Get "app.sh" | indent 4 }}

{{- range .Values.appFiles }}
  {{ . | trimSuffix ".py" | trimSuffix ".txt" }}: |-
{{ $.Files.Get (printf "dashboard/%s" .) | indent 4 }}
  {{- end }}